<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-check-circle"></i>
    Finalizar OS
</h1>

<div class="card form-card">

    <h2 style="margin-bottom:10px; color:var(--green-900);">
        OS #<%= os.id %> — <%= os.equipamento_nome %>
    </h2>

    <p><strong>Descrição:</strong> <%= os.descricao %></p>

    <% if (os.status !== "Fechada") { %>

    <form action="/os/<%= os.id %>/finalizar" method="POST" class="formulario">

        <div class="grupo">
            <label>Observação do Técnico</label>
            <textarea name="obs_final" rows="4" required></textarea>
        </div>

        <button class="btn btn-verde-claro btn-full">
            <i class="fa-solid fa-check"></i> Finalizar OS
        </button>
    </form>

    <% } else { %>

        <div class="alert-error" style="margin-top:16px;">
            Essa OS já está finalizada.
        </div>

    <% } %>

</div>

<a href="/ordens" class="btn btn-cinza-escuro">
    ← Voltar
</a>

