<h1 class="page-title">
    <i class="fa-solid fa-gears"></i>
    <%= correia ? "Editar Correia" : "Cadastrar Correia" %>
</h1>

<div class="card form-card">

    <% if (error) { %>
        <div class="alert-error"><%= error %></div>
    <% } %>

    <form method="POST"
          action="<%= correia ? '/correias/' + correia.id + '/editar' : '/correias/novo' %>">

        <div class="form-grid">

            <!-- Nome -->
            <div>
                <label>Nome da Correia</label>
                <input type="text"
                       name="nome"
                       required
                       value="<%= correia ? correia.nome : '' %>">
            </div>

            <!-- Modelo -->
            <div>
                <label>Modelo</label>
                <input type="text"
                       name="modelo"
                       value="<%= correia ? correia.modelo : '' %>">
            </div>

            <!-- Medida -->
            <div>
                <label>Medida</label>
                <input type="text"
                       name="medida"
                       value="<%= correia ? correia.medida : '' %>">
            </div>

            <!-- Quantidade -->
            <div>
                <label>Quantidade em estoque</label>
                <input type="number"
                       name="quantidade"
                       min="0"
                       value="<%= correia ? correia.quantidade : 0 %>">
            </div>

        </div> <!-- /form-grid -->

        <br>

        <button class="btn-primary" style="width:100%; font-size:16px;">
            <i class="fa-solid fa-save"></i>
            <%= correia ? "Salvar Alterações" : "Cadastrar Correia" %>
        </button>

    </form>

</div>

<div style="margin-top:15px;">
    <a href="/correias" class="btn-secondary" style="padding:12px 18px; display:inline-block;">
        ← Voltar
    </a>
</div>
