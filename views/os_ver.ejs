<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-clipboard"></i>
    Detalhes da OS
</h1>

<div class="card">

    <h2 style="margin-bottom:10px;">
        OS #<%= os.id %>
    </h2>

    <p><strong>Equipamento:</strong> <%= os.equipamento_nome %></p>
    <p><strong>Tipo:</strong> <%= os.tipo %></p>
    <p><strong>Descrição:</strong> <%= os.descricao %></p>
    <p><strong>Técnico:</strong> <%= os.tecnico || '-' %></p>

    <div style="margin-top:10px;">
        <strong>Status:</strong>

        <% if (os.status === "Fechada") { %>
            <span class="tag verde-escuro">Fechada</span>
        <% } else if (os.status === "Em Andamento") { %>
            <span class="tag cinza-escuro">Em Andamento</span>
        <% } else { %>
            <span class="tag cinza-claro">Aberta</span>
        <% } %>
    </div>

    <p style="margin-top:15px;">
        <strong>Abertura:</strong> <%= os.data_abertura %><br>
        <strong>Fechamento:</strong> <%= os.data_fechamento || '-' %>
    </p>

</div>

<div class="actions">

    <a href="/os/<%= os.id %>/editar" class="action-btn btn-edit">
        <i class="fa-solid fa-pen"></i>
        <span class="btn-label">Editar</span>
    </a>

    <a href="/os/<%= os.id %>/finalizar" class="action-btn btn-corr">
        <i class="fa-solid fa-check"></i>
        <span class="btn-label-dark">Finalizar</span>
    </a>

    <a href="/os/<%= os.id %>/fechar" class="action-btn btn-hist">
        <i class="fa-solid fa-lock"></i>
        <span class="btn-label">Fechar</span>
    </a>

    <a href="/os/<%= os.id %>/pdf" class="btn-pdf" target="_blank">
        <i class="fa-solid fa-file-pdf"></i>
        <span class="btn-label">PDF</span>
    </a>

</div>

<a href="/ordens" class="btn btn-cinza-escuro" style="margin-top:15px;">
    ← Voltar
</a>

<%- include("./partials/rodape") %>
