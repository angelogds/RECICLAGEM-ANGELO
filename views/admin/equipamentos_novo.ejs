<h1 class="page-title">Ordens de Serviço</h1>

<a href="/ordens/novo" class="btn btn-green">+ Abrir OS</a>

<br><br>

<div class="card">
<table class="table">
<thead>
<tr>
  <th>ID</th>
  <th>Equipamento</th>
  <th>Tipo</th>
  <th>Status</th>
  <th>Ação</th>
</tr>
</thead>

<tbody>
<% ordens.forEach(o => { %>
<tr>
  <td><%= o.id %></td>
  <td><%= o.equipamento_nome || "-" %></td>
  <td><%= o.tipo %></td>
  <td>
    <% if (o.status === "aberta") { %>
      <span class="badge bg-blue">Aberta</span>
    <% } else { %>
      <span class="badge bg-green">Fechada</span>
    <% } %>
  </td>
  <td>
    <% if (o.status === "aberta") { %>
      <a href="/ordens/<%= o.id %>/fechar" class="btn-table btn-edit">Fechar</a>
    <% } else { %>
      <a href="/solicitacao/pdf/<%= o.id %>" class="btn-table btn-green">PDF</a>
    <% } %>
  </td>
</tr>
<% }) %>
</tbody>
</table>
</div>
