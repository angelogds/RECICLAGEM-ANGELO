<%
  const title = "Relatório de Correias";
  const active = "correias";
%>

<h1 class="page-title">Relatório de Correias — Mês: <%= mes %></h1>

<form method="get" action="/correias/relatorio">
  <label>Escolher mês (YYYY-MM)</label>
  <input name="mes" value="<%= mes %>">
  <button class="btn-save">Filtrar</button>
</form>

<table class="tabela">
  <thead><tr><th>Equipamento</th><th>Correia</th><th>Total</th></tr></thead>
  <tbody>
    <% if (rel.length === 0) { %>
      <tr><td colspan="3" class="no-data">Nenhum consumo registrado neste mês.</td></tr>
    <% } %>

    <% rel.forEach(r => { %>
      <tr>
        <td><%= r.equipamento %></td>
        <td><%= r.correia %></td>
        <td><%= r.total %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
