<h1 class="page-title">
    <i class="fa-solid fa-gears"></i>
    <%= correia ? 'Editar Correia' : 'Cadastrar Correia' %>
</h1>

<div class="card" style="
    background:white;
    padding:25px;
    border-radius:12px;
    box-shadow:0 2px 6px #00000015;
    max-width:650px;
">

    <form method="POST"
          action="<%= correia ? '/correias/' + correia.id + '/editar' : '/correias/novo' %>">

        <div style="display:grid; grid-template-columns:1fr 1fr; gap:20px;">

            <!-- Nome -->
            <div>
                <label style="font-weight:600;">Nome da Correia</label>
                <input name="nome"
                       required
                       value="<%= correia?.nome || '' %>"
                       style="width:100%; padding:12px; border-radius:8px; border:1px solid #d9d9d9;">
            </div>

            <!-- Modelo -->
            <div>
                <label style="font-weight:600;">Modelo</label>
                <input name="modelo"
                       value="<%= correia?.modelo || '' %>"
                       style="width:100%; padding:12px; border-radius:8px; border:1px solid #d9d9d9;">
            </div>

            <!-- Medida -->
            <div>
                <label style="font-weight:600;">Medida</label>
                <input name="medida"
                       value="<%= correia?.medida || '' %>"
                       style="width:100%; padding:12px; border-radius:8px; border:1px solid #d9d9d9;">
            </div>

            <!-- Quantidade -->
            <div>
                <label style="font-weight:600;">Quantidade em estoque</label>
                <input type="number"
                       name="quantidade"
                       min="0"
                       value="<%= correia?.quantidade || 0 %>"
                       style="width:100%; padding:12px; border-radius:8px; border:1px solid #d9d9d9;">
            </div>

        </div>

        <!-- BOTÕES -->
        <div style="margin-top:25px; display:flex; gap:12px;">
            <button class="btn-primary">
                <i class="fa-solid fa-save"></i>
                <%= correia ? 'Salvar Alterações' : 'Cadastrar' %>
            </button>

            <a href="/correias"
               class="btn-primary"
               style="background:#777;">
                <i class="fa-solid fa-arrow-left"></i> Voltar
            </a>
        </div>

    </form>
</div>
