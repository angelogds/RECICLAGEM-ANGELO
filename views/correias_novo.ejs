<h1 class="page-title">
    <%= correia ? "Editar Correia" : "Nova Correia" %>
</h1>

<div class="form-card">

    <% if (error) { %>
        <div class="alert-error"><%= error %></div>
    <% } %>

    <form method="POST"
          action="<%= correia ? '/correias/' + correia.id + '/editar' : '/correias/novo' %>"
          class="form-grid">

        <!-- COLUNA 01 -->
        <div>
            <label>Nome da Correia</label>
            <input type="text" name="nome" required
                   value="<%= correia?.nome || '' %>" placeholder="Ex: B-72, V-10, A-45">
        </div>

        <div>
            <label>Modelo</label>
            <input type="text" name="modelo"
                   value="<%= correia?.modelo || '' %>" placeholder="Ex: A, B, C, Tipo V">
        </div>

        <!-- COLUNA 02 -->
        <div>
            <label>Medida</label>
            <input type="text" name="medida"
                   value="<%= correia?.medida || '' %>" placeholder="Ex: 720mm, 45cm">
        </div>

        <div>
            <label>Quantidade em Estoque</label>
            <input type="number" min="0" name="quantidade"
                   value="<%= correia?.quantidade || 0 %>">
        </div>

        <div style="grid-column: span 2; text-align:right; margin-top:8px;">
            <button class="btn-primary">
                <%= correia ? "Salvar Alterações" : "Cadastrar Correia" %>
            </button>
        </div>

    </form>
</div>
