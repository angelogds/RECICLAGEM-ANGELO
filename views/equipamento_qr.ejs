<% layout('layout', { title: "QR Code", active: "equipamentos" }) %>

<h1 class="page-title">QR Code do Equipamento</h1>

<div class="card" style="text-align:center; padding:20px;">

    <h2><%= equipamento.nome %></h2>
    <p><strong>Código:</strong> <%= equipamento.codigo || "-" %></p>

    <img src="<%= qr %>" class="qr-img">

    <p style="margin-top:10px;">
        <strong>Ação:</strong><br>
        Escaneie para abrir a tela de baixa da máquina.<br>
    </p>

    <a href="<%= url %>" class="btn-link">Abrir link</a>
</div>
