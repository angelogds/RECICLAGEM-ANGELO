<h1 class="page-title">
    <%= correia ? "Editar Correia" : "Nova Correia" %>
</h1>

<div class="form-card">

    <form method="POST" 
          action="<%= correia ? '/correias/' + correia.id + '/editar' : '/correias/novo' %>" 
          class="form-grid">

        <!-- Nome -->
        <div>
            <label>Nome da Correia</label>
            <input name="nome" required 
                   placeholder="Ex.: Correia A-32"
                   value="<%= correia?.nome || "" %>">
        </div>

        <!-- Modelo -->
        <div>
            <label>Modelo</label>
            <input name="modelo" 
                   placeholder="Ex.: A / B / C..."
                   value="<%= correia?.modelo || "" %>">
        </div>

        <!-- Medida -->
        <div>
            <label>Medida</label>
            <input name="medida"
                   placeholder="Ex.: 32 mm"
                   value="<%= correia?.medida || "" %>">
        </div>

        <!-- Quantidade -->
        <div>
            <label>Quantidade em estoque</label>
            <input type="number" name="quantidade" min="0" 
                   value="<%= correia?.quantidade || 0 %>"
                   placeholder="0">
        </div>

        <div style="grid-column: 1 / -1; text-align:right;">
            <button class="btn-primary">
                <%= correia ? "Salvar Alterações" : "Cadastrar Correia" %>
            </button>
        </div>

    </form>
</div>
