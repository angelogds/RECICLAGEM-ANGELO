<h1 class="page-title">
    <i class="fa-solid fa-gears"></i> Correias do Equipamento
</h1>

<div class="card">

    <h2 style="color:#0b5e33; font-weight:800; margin-bottom:18px;">
        <%= equipamento.nome %>
    </h2>

    <form method="POST" class="form-card">

        <p style="margin-bottom:20px; opacity:0.8;">
            Selecione as correias usadas e defina a quantidade aplicada neste equipamento.
        </p>

        <table class="table-modern">
            <thead>
                <tr>
                    <th>Correia</th>
                    <th>Modelo</th>
                    <th>Medida</th>
                    <th>Qtd</th>
                    <th>Usar</th>
                </tr>
            </thead>

            <tbody>
                <% correias.forEach(c => { %>
                    <tr>
                        <td><%= c.nome %></td>
                        <td><%= c.modelo %></td>
                        <td><%= c.medida %></td>

                        <td style="max-width:75px;">
                            <input type="number"
                                   name="qtd_<%= c.id %>"
                                   value="<%= mapLigados[c.id] || 0 %>"
                                   min="0"
                                   style="width:80px;">
                        </td>

                        <td class="center">
                            <input type="checkbox"
                                   name="correia"
                                   value="<%= c.id %>"
                                   <%= mapLigados[c.id] ? "checked" : "" %> >
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <div style="text-align:center; margin-top:25px;">
            <button class="btn-primary" style="padding:14px 26px;">
                <i class="fa-solid fa-floppy-disk"></i> Salvar Alterações
            </button>
        </div>

    </form>

    <div class="actions" style="margin-top:25px;">

        <a href="/equipamentos/<%= equipamento.id %>" class="btn-edit btn-stack">
            <i class="fa-solid fa-eye"></i>
            <span class="btn-label">Ver</span>
        </a>

        <a href="/equipamentos" class="btn-history btn-stack">
            <i class="fa-solid fa-arrow-left"></i>
            <span class="btn-label">Voltar</span>
        </a>

    </div>

</div>
