<h1 class="page-title">
    <i class="fa-solid fa-pen-to-square"></i>
    Editar OS #<%= os.id %>
</h1>

<div class="form-card">

    <form method="POST">

        <!-- Equipamento -->
        <label>Equipamento</label>
        <input type="text" value="<%= equipamento.nome %>" disabled>

        <!-- Tipo -->
        <label>Tipo de OS</label>
        <select name="tipo" required>
            <option value="Corretiva" <%= os.tipo === 'Corretiva' ? 'selected' : '' %>>Corretiva</option>
            <option value="Preventiva" <%= os.tipo === 'Preventiva' ? 'selected' : '' %>>Preventiva</option>
            <option value="Inspeção" <%= os.tipo === 'Inspeção' ? 'selected' : '' %>>Inspeção</option>
        </select>

        <!-- Descrição -->
        <label>Descrição</label>
        <textarea name="descricao" rows="5" required><%= os.descricao %></textarea>

        <button class="btn-primary" style="margin-top:12px;">
            <i class="fa-solid fa-check"></i> Salvar Alterações
        </button>
    </form>
</div>

<!-- BOTÕES AÇÕES -->
<div class="card" style="text-align:center; margin-top:20px;">
    <div class="actions">

        <!-- PDF -->
        <a href="/os/<%= os.id %>/pdf" class="btn-action btn-qr">
            <i class="fa-solid fa-file-pdf"></i>
            <span class="btn-label">PDF</span>
        </a>

        <!-- EXCLUIR -->
        <form action="/os/<%= os.id %>/delete"
              method="POST"
              onsubmit="return confirm('Excluir esta OS?');">
            <button class="btn-action btn-delete">
                <i class="fa-solid fa-trash"></i>
                <span class="btn-label">Excluir</span>
            </button>
        </form>

        <!-- VOLTAR -->
        <a href="/os/<%= os.id %>" class="btn-action btn-history">
            <i class="fa-solid fa-arrow-left"></i>
            <span class="btn-label">Voltar</span>
        </a>

    </div>
</div>
