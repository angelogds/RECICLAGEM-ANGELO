<h1 class="page-title">
    <i class="fa-solid fa-file-circle-plus"></i>
    Abrir Nova Ordem de Serviço
</h1>

<div class="card form-card">

    <% if (error) { %>
    <div class="alert-error"><%= error %></div>
    <% } %>

    <form method="POST" action="/os/nova">

        <label>Equipamento</label>
        <select name="equipamento_id" required>
            <option value="">Selecione...</option>
            <% equipamentos.forEach(eq => { %>
                <option value="<%= eq.id %>"><%= eq.nome %></option>
            <% }) %>
        </select>

        <label>Tipo</label>
        <select name="tipo" required>
            <option value="Mecânica">Mecânica</option>
            <option value="Elétrica">Elétrica</option>
            <option value="Preventiva">Preventiva</option>
            <option value="Corretiva">Corretiva</option>
        </select>

        <label>Descrição</label>
        <textarea name="descricao" rows="4" required></textarea>

        <button class="btn-primary" style="width:100%; margin-top:10px;">
            <i class="fa-solid fa-floppy-disk"></i> Abrir OS
        </button>
    </form>
</div>

<div style="margin-top:18px;">
    <a href="/os" class="btn-secondary">
        ← Voltar
    </a>
</div>
