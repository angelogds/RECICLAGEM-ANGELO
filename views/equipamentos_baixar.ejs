<% layout('layout', { title: "Baixar Correia", active: "equipamentos" }) %>

<h1 class="page-title">Baixar Correia — <%= equipamento.nome %></h1>

<div class="card">

    <form method="POST" action="/equipamentos/<%= equipamento.id %>/baixar-correia">

        <label>Escolha a Correia</label>
        <select name="correia_id" required>
            <option value="">Selecione</option>
            <% correias.forEach(c => { %>
                <option value="<%= c.id %>"><%= c.nome %> — Estoque: <%= c.quantidade %></option>
            <% }) %>
        </select>

        <label>Quantidade utilizada</label>
        <input type="number" name="quantidade" min="1" required>

        <button class="btn-save">Dar Baixa</button>
    </form>
</div>
