<h1 class="page-title">
    <i class="fa-solid fa-arrow-down"></i> Baixa de Correias
</h1>

<div class="card">

    <h2 style="color:#0b5e33; font-weight:800; margin-bottom:18px;">
        <%= equipamento.nome %>
    </h2>

    <form method="POST" action="/equipamentos/<%= equipamento.id %>/baixar-correia" class="form-card">

        <label>Selecione a correia</label>
        <select name="correia_id" required>
            <option value="">Selecione</option>
            <% correias.forEach(c => { %>
                <option value="<%= c.id %>">
                    <%= c.nome %> — <%= c.modelo %> — <%= c.medida %> (Estoque: <%= c.quantidade %>)
                </option>
            <% }) %>
        </select>

        <label>Quantidade usada</label>
        <input type="number" name="quantidade" min="1" required>

        <button class="btn-primary" style="margin-top:18px;">
            <i class="fa-solid fa-floppy-disk"></i> Registrar Baixa
        </button>

    </form>

    <div class="actions" style="margin-top:25px;">

        <a href="/equipamentos/<%= equipamento.id %>" class="btn-edit btn-stack">
            <i class="fa-solid fa-eye"></i>
            <span class="btn-label">Ver</span>
        </a>

        <a href="/equipamentos" class="btn-history btn-stack">
            <i class="fa-solid fa-arrow-left"></i>
            <span class="btn-label">Voltar</span>
        </a>

    </div>

</div>
