<% /* views/forgot.ejs */ %>
<h1 class="page-title">Recuperar Senha</h1>

<div class="card">
  <% if (error) { %><div class="erro"><%= error %></div><% } %>
  <% if (info) { %><div style="background:#e6fff0;padding:10px;border-radius:6px;margin-bottom:12px"><%= info %></div><% } %>

  <form method="POST" action="/forgot">
    <label>Usuário (email)</label>
    <input name="usuario" required />
    <button class="btn btn-green" style="margin-top:12px">Enviar link de recuperação</button>
  </form>
</div>
