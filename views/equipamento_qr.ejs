<h1 class="page-title">QR Code do Equipamento</h1>

<div class="qr-container">
    <h2><%= equipamento.nome %></h2>

    <img src="<%= qr %>" class="qr-img">

    <p class="qr-label">Escaneie para ver o equipamento</p>

    <button onclick="window.print()" class="btn-print">
        <i class="fa-solid fa-print"></i> Imprimir
    </button>
</div>

<style>
.qr-container {
    background: #fff;
    padding: 30px;
    border-radius: 14px;
    text-align: center;
    box-shadow: 0 2px 6px rgba(0,0,0,.15);
}

.qr-img {
    width: 280px;
    height: 280px;
    margin: 20px auto;
}

.qr-label {
    font-size: 16px;
    margin-bottom: 20px;
    color: #444;
}

.btn-print {
    background: #2e7d32;
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 16px;
}

.btn-print:hover {
    background: #1b5e20;
}
</style>
