<h1 class="page-title">
    <i class="fa-solid fa-gears"></i>
    Correias / Estoque
</h1>

<div style="margin-bottom: 22px;">
    <a href="/correias/novo" class="btn-primary">
        <i class="fa-solid fa-plus"></i> Nova Correia
    </a>
</div>

<div class="card" style="overflow-x:auto;">

    <table class="table-modern">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Modelo</th>
                <th>Medida</th>
                <th>Qtd</th>
                <th style="text-align:center;">Ações</th>
            </tr>
        </thead>

        <tbody>

            <% if (correias.length === 0) { %>
            <tr>
                <td colspan="6" class="empty">
                    Nenhuma correia cadastrada.
                </td>
            </tr>
            <% } %>

            <% correias.forEach(c => { %>
            <tr>
                <td><%= c.id %></td>
                <td><%= c.nome %></td>
                <td><%= c.modelo %></td>
                <td><%= c.medida %></td>

                <td>
                    <span class="tag green" style="font-size: 14px;">
                        <%= c.quantidade %>
                    </span>
                </td>

                <td class="center">
                    <div class="actions">

                        <a href="/correias/<%= c.id %>/editar"
                           class="btn-edit">
                            <i class="fa-solid fa-pen"></i>
                            <span class="btn-label">Editar</span>
                        </a>

                        <form method="POST"
                              action="/correias/<%= c.id %>/delete"
                              onsubmit="return confirm('Excluir correia?');">
                            <button class="btn-delete">
                                <i class="fa-solid fa-trash"></i>
                                <span class="btn-label">Excluir</span>
                            </button>
                        </form>

                    </div>
                </td>
            </tr>
            <% }) %>

        </tbody>
    </table>

</div>

<!-- Botão PDF -->
<div style="margin-top:20px;">
    <a href="/correias/relatorio/pdf" class="btn-primary" target="_blank">
        <i class="fa-solid fa-file-pdf"></i> Baixar PDF Completo
    </a>
</div>
