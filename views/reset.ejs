<% /* views/reset.ejs */ %>
<h1 class="page-title">Redefinir Senha</h1>

<div class="card">
  <% if (error) { %><div class="erro"><%= error %></div><% } %>

  <form method="POST" action="/reset/<%= token %>">
    <label>Nova senha</label>
    <input type="password" name="senha" required />
    <button class="btn btn-green" style="margin-top:12px">Atualizar senha</button>
  </form>
</div>
