<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-chart-column"></i>
    Relatório de Consumo de Correias
</h1>

<div class="card">

    <div class="info-relatorio" style="margin-bottom:18px;">
        <p><strong>Gerado em:</strong> <%= new Date().toLocaleString("pt-BR") %></p>
        <p><strong>Mês consultado:</strong> <%= mes %></p>
        <p><strong>Total de itens:</strong> <%= rel.length %></p>
    </div>

    <table class="tabela">
        <thead>
            <tr>
                <th>Equipamento</th>
                <th>Correia</th>
                <th>Quantidade</th>
            </tr>
        </thead>

        <tbody>
            <% if (!rel || rel.length === 0) { %>
                <tr>
                    <td colspan="3" class="empty">Nenhum consumo registrado neste período.</td>
                </tr>
            <% } else { %>
                <% rel.forEach(r => { %>
                <tr>
                    <td><%= r.equipamento %></td>
                    <td><%= r.correia %></td>
                    <td><%= r.total %></td>
                </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>

</div>

<div class="relatorio-actions" style="margin-top:12px;">
    <a href="/correias/relatorio/pdf?mes=<%= mes %>" target="_blank" class="btn btn-verde-escuro">
        <i class="fa-solid fa-file-pdf"></i> Baixar PDF
    </a>

    <a href="/correias" class="btn btn-cinza-escuro">← Voltar</a>
</div>

<%- include("./partials/rodape") %>
