<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Novo Equipamento - Admin</title>
  <link rel="stylesheet" href="/public/style.css">
</head>
<body>
  <% include ../partials/cabecalho.ejs %>

  <main class="container">
    <h1>âž• Cadastrar Novo Equipamento</h1>

    <form action="/admin/equipamentos/novo" method="POST" enctype="multipart/form-data" class="formulario">
      <div class="form-group">
        <label for="nome">Nome do Equipamento:</label>
        <input type="text" id="nome" name="nome" required>
      </div>

      <div class="form-group">
        <label for="setor">Setor:</label>
        <input type="text" id="setor" name="setor" required>
      </div>

      <div class="form-group">
        <label for="correias_utilizadas">Correias Utilizadas:</label>
        <input type="number" id="correias_utilizadas" name="correias_utilizadas" min="0" value="0">
      </div>

      <div class="form-group">
        <label for="foto">Foto do Equipamento:</label>
        <input type="file" id="foto" name="foto" accept="image/*">
      </div>

      <button type="submit" class="btn">Salvar</button>
      <a href="/admin/equipamentos" class="btn btn-secundario">Cancelar</a>
    </form>
  </main>

  <% include ../partials/rodape.ejs %>
</body>
</html>
