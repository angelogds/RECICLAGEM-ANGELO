<h1 class="page-title">
    <i class="fa-solid fa-gears"></i> Correias — <%= equipamento.nome %>
</h1>

<!-- CARD: info do equipamento -->
<div class="card" style="background:white; padding:20px; border-radius:12px; margin-bottom:25px; box-shadow:0 2px 6px #00000015;">
    <p><strong>ID:</strong> <%= equipamento.id %></p>
    <p><strong>Código:</strong> <%= equipamento.codigo %></p>
</div>

<!-- REGISTRAR CONSUMO -->
<h2 class="page-title" style="font-size:22px; margin-top:10px;">
    <i class="fa-solid fa-arrow-down-wide-short"></i> Registrar Consumo
</h2>

<div class="card" style="background:white; padding:20px; border-radius:12px; box-shadow:0 2px 6px #00000015; max-width:500px;">

    <form method="POST" action="/equipamentos/<%= equipamento.id %>/correias">

        <label style="font-weight:600;">Correia</label>
        <select name="correia_id" required
                style="width:100%; padding:12px; border-radius:8px; border:1px solid #d9d9d9; margin-bottom:18px;">
            <option value="">Selecione</option>
            <% listaCorreias.forEach(c => { %>
                <option value="<%= c.id %>"><%= c.nome %> — <%= c.modelo %></option>
            <% }) %>
        </select>

        <label style="font-weight:600;">Quantidade</label>
        <input type="number" min="1" name="quantidade" required
               style="width:100%; padding:12px; border-radius:8px; border:1px solid #d9d9d9; margin-bottom:18px;">

        <button class="btn-primary">
            <i class="fa-solid fa-plus"></i> Registrar
        </button>
    </form>
</div>

<!-- HISTÓRICO -->
<h2 class="page-title" style="font-size:22px; margin-top:40px;">
    <i class="fa-solid fa-boxes-stacked"></i> Histórico de Consumo
</h2>

<div class="card" style="background:white; padding:20px; border-radius:12px; box-shadow:0 2px 6px #00000015;">
    <table class="table">
        <thead>
            <tr>
                <th>Correia</th>
                <th>Qtd</th>
                <th>Data</th>
            </tr>
        </thead>

        <tbody>
            <% if (historico.length === 0) { %>
                <tr>
                    <td colspan="3" style="text-align:center; opacity:0.6; padding:15px;">
                        Nenhum consumo lançado.
                    </td>
                </tr>
            <% } %>

            <% historico.forEach(h => { %>
                <tr>
                    <td><%= h.nome %> — <%= h.modelo %></td>
                    <td><%= h.quantidade %></td>
                    <td><%= h.data %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
