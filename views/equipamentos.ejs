<h1 class="page-title">
    <i class="fa-solid fa-truck"></i> Equipamentos
</h1>

<div style="margin-bottom: 25px;">
    <a href="/equipamentos/novo" class="btn-primary">
        <i class="fa-solid fa-plus"></i> Novo Equipamento
    </a>
</div>

<div class="card" style="
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 6px #00000015;
">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Imagem</th>
                <th>Nome</th>
                <th>Código</th>
                <th>Local</th>
                <th style="text-align:center;">Ações</th>
            </tr>
        </thead>

        <tbody>
            <% if (equipamentos.length === 0) { %>
                <tr>
                    <td colspan="6" style="text-align:center; padding:18px; opacity:0.7;">
                        Nenhum equipamento cadastrado.
                    </td>
                </tr>
            <% } %>

            <% equipamentos.forEach(e => { %>
                <tr>
                    <td><%= e.id %></td>

                    <td>
                        <% if (e.imagem) { %>
                            <img src="/<%= e.imagem %>" class="thumb">
                        <% } else { %>
                            <span style="opacity:0.6;">Sem imagem</span>
                        <% } %>
                    </td>

                    <td><%= e.nome %></td>
                    <td><%= e.codigo %></td>
                    <td><%= e.local %></td>

                    <td class="actions">
                        <a href="/equipamentos/<%= e.id %>/editar" class="btn-edit">
                            <i class="fa-solid fa-pen"></i>
                        </a>

                        <a href="/equipamentos/<%= e.id %>/qrcode" class="btn-qr">
                            <i class="fa-solid fa-qrcode"></i>
                        </a>

                        <a href="/equipamentos/<%= e.id %>/historico" class="btn-history">
                            <i class="fa-solid fa-clock-rotate-left"></i>
                        </a>

                        <form method="POST" action="/equipamentos/<%= e.id %>/delete"
                              onsubmit="return confirm('Remover equipamento?');">
                            <button class="btn-delete">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
