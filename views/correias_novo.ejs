<h1 class="page-title">
    <%= correia ? "Editar Correia" : "Cadastrar Nova Correia" %>
</h1>

<div class="card form-card">

    <form method="POST"
          action="<%= correia ? '/correias/' + correia.id + '/editar' : '/correias/novo' %>">

        <div class="form-group">
            <label>Nome da Correia</label>
            <input class="input" name="nome" required
                   value="<%= correia?.nome || "" %>">
        </div>

        <div class="form-group">
            <label>Modelo</label>
            <input class="input" name="modelo"
                   value="<%= correia?.modelo || "" %>">
        </div>

        <div class="form-group">
            <label>Medida</label>
            <input class="input" name="medida"
                   value="<%= correia?.medida || "" %>">
        </div>

        <div class="form-group">
            <label>Quantidade em estoque</label>
            <input class="input" type="number" min="0" name="quantidade"
                   value="<%= correia?.quantidade || 0 %>">
        </div>

        <button class="btn-primary btn-full">
            <%= correia ? "Salvar Alterações" : "Cadastrar" %>
        </button>

    </form>

</div>
