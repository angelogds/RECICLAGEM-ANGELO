<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-plus"></i>
    Cadastrar Novo Equipamento
</h1>

<div class="card form-card">

    <% if (error) { %>
        <div class="alert-error"><%= error %></div>
    <% } %>

    <form action="/equipamentos" method="POST" enctype="multipart/form-data" class="formulario">

        <div class="grupo">
            <label>Nome do Equipamento</label>
            <input type="text" name="nome" required>
        </div>

        <div class="grupo">
            <label>Modelo</label>
            <input type="text" name="modelo">
        </div>

        <div class="grupo">
            <label>Localiza√ß√£o</label>
            <input type="text" name="local">
        </div>

        <div class="grupo">
            <label>C√≥digo</label>
            <input type="text" name="codigo">
        </div>

        <div class="grupo">
            <label>Descri√ß√£o</label>
            <textarea name="descricao" rows="4"></textarea>
        </div>

        <div class="grupo">
            <label>Foto do Equipamento</label>
            <!-- üî• CORRETO PARA MULTER -->
            <input type="file" name="imagem" accept="image/*">
        </div>

        <button class="btn btn-verde-claro btn-full">
            <i class="fa-solid fa-floppy-disk"></i> Salvar Equipamento
        </button>

    </form>

</div>

<a href="/equipamentos" class="btn btn-cinza-escuro">
    ‚Üê Voltar
</a>

