<h1 class="page-title">
    <i class="fa-solid fa-clock-rotate-left"></i> Histórico do Equipamento
</h1>

<div class="card">

    <h2 style="color:#0b5e33; font-weight:800; margin-bottom:16px;">
        <%= equipamento.nome %>
    </h2>

    <h3 style="margin-top:20px; color:#083b1d;">Ordens de Serviço</h3>

    <table class="table-modern">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tipo</th>
                <th>Status</th>
                <th>Abertura</th>
                <th>Fechamento</th>
            </tr>
        </thead>
        <tbody>
            <% if (ordens.length === 0) { %>
                <tr><td colspan="5" class="empty">Nenhuma OS registrada.</td></tr>
            <% } %>

            <% ordens.forEach(o => { %>
                <tr>
                    <td><%= o.id %></td>
                    <td><%= o.tipo %></td>
                    <td><%= o.status %></td>
                    <td><%= o.aberta_em %></td>
                    <td><%= o.fechada_em || '-' %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h3 style="margin-top:30px; color:#083b1d;">Correias Consumidas</h3>

    <table class="table-modern">
        <thead>
            <tr>
                <th>Correia</th>
                <th>Quantidade</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            <% if (correias.length === 0) { %>
                <tr><td colspan="3" class="empty">Nenhum consumo registrado.</td></tr>
            <% } %>

            <% correias.forEach(c => { %>
                <tr>
                    <td><%= c.correia %></td>
                    <td><%= c.quantidade %></td>
                    <td><%= c.data %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <div class="actions" style="margin-top:25px;">

        <a href="/equipamentos/<%= equipamento.id %>" class="btn-edit btn-stack">
            <i class="fa-solid fa-eye"></i>
            <span class="btn-label">Ver</span>
        </a>

        <a href="/equipamentos" class="btn-history btn-stack">
            <i class="fa-solid fa-arrow-left"></i>
            <span class="btn-label">Voltar</span>
        </a>

    </div>

</div>
