<h1 class="page-title">
    <i class="fa-solid fa-bars"></i>
    Menu — <%= equipamento.nome %>
</h1>

<div class="card" style="padding:25px;">

    <!-- INFO DO EQUIPAMENTO -->
    <div style="text-align:center; margin-bottom:20px;">
        
        <!-- Foto -->
        <% if (equipamento.imagem) { %>
            <img src="/<%= equipamento.imagem %>" 
                 class="thumb"
                 style="width:160px; height:140px; border-radius:12px; margin-bottom:10px;">
        <% } else { %>
            <img src="/img/placeholder.png" 
                 class="thumb"
                 style="width:160px; height:140px; border-radius:12px; margin-bottom:10px;">
        <% } %>

        <h2 style="font-size:22px; color:#0d3d25; font-weight:800; margin-bottom:6px;">
            <%= equipamento.nome %>
        </h2>

        <p style="font-size:14px; color:#0d3d25; margin-top:4px;">
            <strong>Modelo:</strong> <%= equipamento.modelo || "-" %> &nbsp;|&nbsp;
            <strong>Código:</strong> <%= equipamento.codigo || "-" %> &nbsp;|&nbsp;
            <strong>Local:</strong> <%= equipamento.local || "-" %>
        </p>
    </div>

    <!-- BOTÕES DO MENU -->
    <div style="display:flex; flex-wrap:wrap; gap:16px; justify-content:center; margin-top:20px;">

        <!-- EDITAR -->
        <a href="/equipamentos/<%= equipamento.id %>/editar"
           class="action-btn btn-edit">
            <i class="fa-solid fa-pen"></i>
            <span class="btn-label">Editar</span>
        </a>

        <!-- HISTÓRICO -->
        <a href="/equipamentos/<%= equipamento.id %>/historico"
           class="action-btn btn-hist">
            <i class="fa-solid fa-clock-rotate-left"></i>
            <span class="btn-label">Hist.</span>
        </a>

        <!-- CORREIAS -->
        <a href="/equipamentos/<%= equipamento.id %>/correias"
           class="action-btn btn-corr">
            <i class="fa-solid fa-gears"></i>
            <span class="btn-label-dark">Correias</span>
        </a>

        <!-- ABRIR OS -->
        <a href="/ordens/novo?equipamento_id=<%= equipamento.id %>"
           class="action-btn btn-verde-claro">
            <i class="fa-solid fa-file-circle-plus"></i>
            <span class="btn-label">Abrir OS</span>
        </a>

        <!-- VER OS DO EQUIPAMENTO -->
        <a href="/equipamentos/<%= equipamento.id %>/historico#os"
           class="action-btn btn-qr">
            <i class="fa-solid fa-list-check"></i>
            <span class="btn-label">OS</span>
        </a>

        <!-- BAIXA DE CORREIAS -->
        <a href="/equipamentos/<%= equipamento.id %>/baixar"
           class="action-btn btn-verde-escuro">
            <i class="fa-solid fa-arrow-down"></i>
            <span class="btn-label">Baixar</span>
        </a>

        <!-- QR CODE -->
        <a href="/equipamentos/<%= equipamento.id %>/qrcode"
           class="action-btn btn-qr">
            <i class="fa-solid fa-qrcode"></i>
            <span class="btn-label">QR</span>
        </a>

        <!-- VOLTAR -->
        <a href="/equipamentos"
           class="action-btn btn-cinza-escuro">
            <i class="fa-solid fa-arrow-left"></i>
            <span class="btn-label">Voltar</span>
        </a>

    </div>

</div>

<%- include("./partials/rodape") %>
